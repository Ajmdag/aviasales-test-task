.Filter
    &_Label
        padding 0 20px
        height 40px
        width 100%
        display block
        font-size 13px
        line-height 1.54
        font-weight 400
        color var(--general-text-color)
        cursor pointer
        display flex
        align-items center
        &:hover
            background-color var(--filter-hover-color)

    &_CustomCheckBox
        display inline-block
        width 20px
        height 20px
        z-index 1
        margin-bottom -5px
        transition all .2s ease
        overflow hidden
        margin-right 10px
        border 1px solid var(--default-checkbox-border-color)
        border-radius 2px
        &:after
            content ''
            display block
            width 100%
            height 100%
            background url(./i/tick.svg) no-repeat center center
            will-change transform, opacity
            transition transform .2s, opacity .2s
            transform translateY(-5px)
            opacity 0

    &_Input
        display none
        &:checked + .Filter_CustomCheckBox
            border 1px solid var(--checked-checkbox-border-color)
            background-color var(--filter-hover-color)
        &:checked + .Filter_CustomCheckBox:after
            transform translateY(0)
            opacity 1
