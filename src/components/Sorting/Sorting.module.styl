.Sorting
    display flex
    list-style none
    margin 0
    padding 0
    margin-bottom 20px
    &_Tab
        display flex
        justify-content center
        width 50%
        background-color var(--white-color)
        text-transform uppercase
        padding 15px 57px
        font-size 12px
        font-weight 600
        line-height 1.67
        color var(--general-text-color)
        border 1px solid #dfe5ec
        cursor pointer
        &:hover:not(&__active)
            border-color var(--sorting-active-color)
            color var(--sorting-active-color)
            background-color var(--filter-hover-color)
        &:first-child
            border-radius 5px 0 0 5px
        &:last-child
            border-radius 0 5px 5px 0
        &__active
            color var(--white-color)
            border-color var(--sorting-active-color)
            background-color var(--sorting-active-color)
